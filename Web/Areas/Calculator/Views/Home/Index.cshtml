
@{
	ViewBag.Title = "Home";
}

@section Styles {
	<link href="@Url.Content("~/Areas/Calculator/Content/Custom.css")" rel="stylesheet" type="text/css" />
}

@section scripts {
	<script src="~/Scripts/angular.js"></script>
	<script src="~/Areas/Calculator/Scripts/Calculator.js"></script>
	<script src="~/Areas/Calculator/Scripts/CalculatorService.js"></script>
	<script src="~/Areas/Calculator/Scripts/CalculatorState.js"></script>
	<script src="~/Areas/Calculator/Scripts/CalculatorModel.js"></script>
	<script src="~/Areas/Calculator/Scripts/HomeController.js"></script>
}
<div id="calculator" ng-app="calculator">
	<div ng-controller="HomeController">
		<div id="debugPanel" class="row">
			<div class="col-xs-12">Current State: {{model.currentState.name}}, Acc: {{model.acc}}, Pending Op: {{model.pendingOpName()}}</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<input id="display" type="text" ng-model="model.display" class="form-control" />
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<button ng-click="numClick(7)" class="btn btn-default">7</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(8)" class="btn btn-default">8</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(9)" class="btn btn-default">9</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="opClick(model.Operations.DIVIDE)" class="btn btn-default">/</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<button ng-click="numClick(4)" class="btn btn-default">4</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(5)" class="btn btn-default">5</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(6)" class="btn btn-default">6</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="opClick(model.Operations.MULTIPLY)" class="btn btn-default">*</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<button ng-click="numClick(1)" class="btn btn-default">1</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(2)" class="btn btn-default">2</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="numClick(3)" class="btn btn-default">3</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="opClick(model.Operations.SUBTRACT)" class="btn btn-default">-</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<button ng-click="numClick(0)" class="btn btn-default">0</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="periodClick()" class="btn btn-default">.</button>
			</div>
			<div class="col-xs-3">
				<button ng-click="opClick(model.Operations.ADD)" class="btn btn-default">+</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<button ng-click="clearClick()" class="btn btn-default">C</button>
			</div>
			<div class="col-xs-6">
				<button ng-click="execClick()" class="btn btn-default">=</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12"><input id="debug" type="checkbox" name="debug" value="debug">Debug<br></div>
		</div>
	</div>
</div>
